{
    "name": "swaptab",
    "version": "0.1",
    "manifest_version":2,

    "description": "Swap adjacent tabs",

    "permissions":[
        "tabs","storage"
    ],


    "background":{
        "scripts": ["background.js"]
    },

    "options_page": "options.html",

    "commands":{
        "right":{
            "description": "Swap a tab to the right",
            "suggested_key": {
                "default": "Ctrl+Shift+L"
            }
        },
        "left":{
            "description": "Swap a tab to the left",
            "suggested_key": {
                "default": "Ctrl+Shift+H"
            }
        },
        "rightmost":{
            "description": "Move the tab to the rightmost",
            "suggested_key": {
                "default": "Ctrl+Shift+9"
            }
        }
    }
}
